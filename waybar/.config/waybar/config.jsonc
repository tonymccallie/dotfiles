{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    
    // "height": 36, // Waybar height (to be removed for auto height)
    // Archived modules
    // "custom/gpu",  "custom/weather","hyprland/window", "custom/gpu",  "custom/media",  
    // Choose the order of the modules

    "modules-left": [
      "custom/rofi",
      "hyprland/workspaces", 
      "custom/arrow1", 
      "custom/pacman", 
      "custom/arrow2", 
      "idle_inhibitor", 
      "custom/arrow3",  
      "custom/playerctl"
    ],
    "modules-center": [
      "custom/arrow4", 
      "clock#time", 
      "clock#date", 
      "custom/weather",
      "custom/arrow5"
    ],
    "modules-right": [
      "custom/arrow6", 
      "pulseaudio", 
      "custom/arrow7",  
      "cpu", 
      "memory",
      "custom/arrow8", 
      "network", 
      "custom/notification",
      "tray",
      "custom/power",
    ],
    
    // Modules configuration
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        // "format": "{icon}",
        // "format-icons": {
        //     "1": "Home",
        //     "2": "Work",
        //     "3": "Music",
        //     "4": "Game",
        //     "5": "Slush",
        //     "urgent": "ÔÅ™",
        //     "focused": "",
        //     "default": ""
        // },
        "persistent-workspaces": {
          "*": 5,
        },
    },
    "bluetooth": {
        "interval": 30,
        "format": "{icon}",
        // "format-alt": "{status}",
        "format-icons": {
            "enabled": "Ôäì",
            "disabled": "Ôöîss"
        },
        "on-click": "blueberry"
    },    
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        },
        "tooltip": "true"
    },
    "tray": {
        //"icon-size": 14,
        "spacing": 4
    },
    "clock#time": {
        "interval": 10,
        "format": "ÔÄó  {:%H:%M}",
        "tooltip": false
    },
    "clock#date": {
        "interval": 20,
        "format": "ÔÅ≥  {:%a %e/%m}",
        // "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        //"today-format": "<b>{}</b>",
        "on-click": "gnome-calendar"
    },
    "cpu": {
        "interval": 5,      
        "format": "Ôãõ {usage:2}%",
        "on-click": "kitty -e btop",
        "tooltip": false
    },
    "memory": {
      "tooltip": true,
      "format": "Ôî∏ {}%",
      "states": {
        "warning": 60,
        "critical": 80,
      },
      "tooltip-format": "RAM: {used}GB/{total}GB\nSwap: {swapUsed}GB/{swapAvail}GB",
    },
    "network": {
        // "interface": "wlan0", // (Optional) To force the use of this interface,
        "format-wifi": "<span color=\"#ebdbb2\">Ôá´</span>  {essid}",
        "format-ethernet": "ÓΩÑ",
        "format-linked": "ÓΩÑ",
        "format-disconnected": "Ôöî",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "family": "ipv4",
        "tooltip-format-wifi": "Ôá´  {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nÔçó {bandwidthUpBits} Ôçî {bandwidthDownBits}",
        "tooltip-format-ethernet": "Ôûñ {ifname}\nIP: {ipaddr}\nÔçó {bandwidthUpBits} Ôçî {bandwidthDownBits}"
    },
    "pulseaudio": {
        "scroll-step": 3, // %, can be a float
        "format": "{icon} {volume:2}% {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        "format-source": "ÔÑ∞",
        "format-source-muted": "<span color=\"#fb4833\">ÔÑ±</span>",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol",
        "on-click-right": "pactl set-source-mute @DEFAULT_SOURCE@ toggle"
    },
    "custom/rofi": {
      "format": "ÔÉâ",
      "tooltip": false,
      "on-click-right": "nwg-drawer",
      "on-click": "wofi --show run",
      "on-click-middle": "pkill -9 wofi"
    },
    "custom/pacman": {
        "format": "<big>Ó¨©</big>  {}",
        "interval": 3600,                     // every hour
        "exec": "checkupdates | wc -l",       // # of updates
        "exec-if": "exit 0",                  // always run; consider advanced run conditions
        "on-click": "kitty -e 'yay'; pkill -SIGRTMIN+8 waybar", // update system
        "signal": 8,
        "max-length": 5,
        "min-length": 3
    },
    "custom/weather2": {
        "exec": "curl 'https://wttr.in/?format=1'",
        "interval": 3600
    },
    "custom/weather": {
      "format": " {}¬∞",
      "tooltip": true,
      "interval": 3600,
      "exec": "wttrbar --location Missoula --fahrenheit",
      "return-type": "json",
    },
    "custom/cpugovernor": {
      "format": "{icon}",
      "interval": "once",
      "return-type": "json",
      "exec": "$HOME/.config/waybar/custom_modules/cpugovernor.sh",
      "min-length": 2,
      "max-length": 3,
      "signal": 8,
        "format-icons": {
            "perf": "Ôü§",
            "ondemand": "Ôíø"
        },
        "on-click": "$HOME/.config/waybar/custom_modules/cpugovernor.sh switch"
        // Requires cpupower to switch governors
    },
    "custom/playerctl": {
        "exec": "$HOME/.config/waybar/custom_modules/media-player-status.py",
        "return-type": "json",
        "on-click": "playerctl play-pause",
    },
    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": false,
        "exec": "$HOME/.config/waybar/custom_modules/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on 
    },
    "custom/notification": {
      "tooltip": false,
      "format": "{icon}",
      "format-icons": {
        "notification": "ÔÇ¢ ",
        "none": "ÔÇ¢ ",
        "dnd-notification": "<span foreground='#ea6962'>Ôá∑</span>",
        "dnd-none": "<span foreground='#ea6962'>Ôá∑ </span>",
        "inhibited-notification": "ÔÇ¢ ",
        "inhibited-none": "ÔÇ¢ ",
        "dnd-inhibited-notification": "<span foreground='#ea6962'>Ôá∑ </span>",
        "dnd-inhibited-none": "<span foreground='#ea6962'>Ôá∑ </span>",
      },
      "return-type": "json",
      "exec-if": "which swaync-client",
      "exec": "swaync-client -swb",
      "on-click": "swaync-client -t -sw",
      "on-click-right": "swaync-client -d -sw",
      "escape": true,
    },
    "custom/arrow1": {
        "format": "ÓÇ∞",
        "tooltip": false
    },
    "custom/arrow2": {
        "format": "ÓÇ∞",
        "tooltip": false
    },

    "custom/arrow3": {
        "format": "ÓÇ∞",
        "tooltip": false
    },

    "custom/arrow4": {
        "format": "ÓÇ∫",
        "tooltip": false
    },

    "custom/arrow5": {
        "format": "ÓÇº",
        "tooltip": false
    },

    "custom/arrow6": {
        "format": "ÓÇ≤",
        "tooltip": false
    },

    "custom/arrow7": {
        "format": "ÓÇ≤",
        "tooltip": false
    },

    "custom/arrow8": {
        "format": "ÓÇ≤",
        "tooltip": false
    },

    "custom/arrow9": {
        "format": "ÓÇ≤",
        "tooltip": false
    },

    "custom/arrow10": {
        "format": "ÓÇ≤",
        "tooltip": false
    }, 
    "custom/power": {
        "format": " Û∞ê• ",
        "tooltip": false,
        "on-click": "wlogout"
    }
}
